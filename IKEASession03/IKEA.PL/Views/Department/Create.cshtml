@model CreateDepartmentDTo
@{
    ViewData["Title"] = "Create";
}

<h1>Create Department</h1>

<form action="/Department/Create" method="post">
    @* <div asp-validation-summary="ModelOnly"></div> *@

    <div class="form-group">
        <label class="form-label"   asp-for="Code">Code</label>
        <input class="form-control" asp-for="Code"/>
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label class="form-label" asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>


    <div class="form-group">
        <label class="form-label" asp-for="CreatedOn"></label>
        <input type="date" class="form-control" asp-for="CreatedOn" />
        <span asp-validation-for="CreatedOn"></span>
    </div>
    <div>
        <input  type="submit" value="Create" class="btn btn-primary"/>
  <a asp-Controller="Department" asp-action="Index" class="btn btn-danger" >Back To List</a>
    </div>
</form>

